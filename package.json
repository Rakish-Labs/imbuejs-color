{
  "name": "@imbuejs/color",
  "version": "0.0.3",
  "description": "ESM Color Transformation Library",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "types": "pkg/index.d.ts",
  "scripts": {
    "clean": "rimraf pkg",
    "test": "uvu -r ts-node/register tests",
    "test:coverage": "c8 npm run test",
    "codecov": "c8 npm run test | ./node_modules/.bin/codecov --pipe --disable=gcov",
    "test:watch": "nodemon -L -e js,ts,json --config nodemon.test.json --exec 'clear && npm run test:coverage'",
    "declarations": "tsc --outDir ./pkg --declaration",
    "build": "npm run clean && rollup -c rollup.config.js && pnpm declarations",
    "bump": "node scripts/bump.cjs",
    "prepare": "node scripts/prepare.cjs",
    "patch": "npm run bump && npm run build && npm run prepare && cp pkg.json pkg/package.json"
  },
  "keywords": [
    "color",
    "colour",
    "esm",
    "ES Modules"
  ],
  "author": "jeffDevelops",
  "license": "MIT",
  "devDependencies": {
    "c8": "^7.7.3",
    "codecov": "^3.8.2",
    "esbuild": "^0.12.15",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-esbuild": "^4.5.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "uvu": "^0.5.1"
  }
}